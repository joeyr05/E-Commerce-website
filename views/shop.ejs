    <section id="product1" class="section-p1">
        <div class="pro-container">
            <% result.forEach(function(item) { %>
            <div class="pro" onclick="window.location.href='/sproduct';">
                <img src="img/products/<%= item.image %>" alt="">
                <div class="des">
                    <span><%= item.brand %></span>
                    <h5><%= item.name %></h5>
                    <div class="star">
                        <div class="star"><button type="button"><%= item.rating %> <i class="fas fa-star"></i></button></div>
                    </div>
                    <h4>Rs. <%= item.price %></h4>
                </div>
                <!--<a href="#"><i class="fal fa-shopping-cart cart"></i></a>-->
                <form action="/add_to_cart" method="post">
                    <input type="hidden" name="id" value="<%= item.id %>">
                    <input type="hidden" name="image" value="<%= item.image %>">
                    <input type="hidden" name="name" value="<%= item.name %>">
                    <input type="hidden" name="price" value="<%= item.price %>">
                    <input type="hidden" name="quantity" value="1">
                    <input type="submit" value="Add to cart" class="button_add">
                </form>
            </div>
            <% }) %>
        </div>
    </section>

